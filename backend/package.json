{
  "name": "place-backend",
  "version": "1.0.0",
  "description": "Backend server for r/place clone",
  "main": "dist/server.js",
  "type": "module",
  "scripts": {
    "build": "tsc",
    "start": "node dist/server.js",
    "dev": "tsx watch src/server.ts",
    "dev:nodemon": "nodemon --exec tsx src/server.ts",
    "init-db": "psql -U placeuser -d place -h localhost -f scripts/init-db.sql",
    "typecheck": "tsc --noEmit"
  },
  "keywords": ["place", "canvas", "websocket", "real-time"],
  "author": "",
  "license": "MIT",
  "dependencies": {
    "express": "^5.1.0",
    "socket.io": "^4.8.1",
    "pg": "^8.16.3",
    "redis": "^5.9.0",
    "jsonwebtoken": "^9.0.2",
    "cors": "^2.8.5",
    "helmet": "^8.1.0",
    "dotenv": "^17.2.3",
    "express-rate-limit": "^8.2.1",
    "winston": "^3.18.3"
  },
  "devDependencies": {
    "@types/express": "^5.0.5",
    "@types/node": "^24.10.1",
    "@types/cors": "^2.8.19",
    "@types/jsonwebtoken": "^9.0.10",
    "@types/pg": "^8.15.6",
    "typescript": "^5.9.3",
    "tsx": "^4.20.6",
    "nodemon": "^3.1.11"
  }
}
